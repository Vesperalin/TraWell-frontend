{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "src",
    "paths": {
      "~/api/*": [
        "./api/*"
      ],
      "~/assets/*": [
        "./assets/*"
      ],
      "~/components/*": [
        "./components/*"
      ],
      "~/context/*": [
        "./context/*"
      ],
      "~/enums/*": [
        "./enums/*"
      ],
      "~/features/*": [
        "./features/*"
      ],
      "~/hooks/*": [
        "./hooks/*"
      ],
      "~/models/*": [
        "./models/*"
      ],
      "~/pages/*": [
        "./pages/*"
      ],
      "~/themes/*": [
        "./themes/*"
      ],
      "~/utils/*": [
        "./utils/*"
      ],
    },
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
