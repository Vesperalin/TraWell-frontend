{
  "compilerOptions": {
    "typeRoots" : ["node_modules/@types", "src/types"],
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "~/api/*": [
        "./src/api/*"
      ],
      "~/assets/*": [
        "./src/assets/*"
      ],
      "~/components/*": [
        "./src/components/*"
      ],
      "~/context/*": [
        "./src/context/*"
      ],
      "~/enums/*": [
        "./src/enums/*"
      ],
      "~/features/*": [
        "./src/features/*"
      ],
      "~/hooks/*": [
        "./src/hooks/*"
      ],
      "~/models/*": [
        "./src/models/*"
      ],
      "~/pages/*": [
        "./src/pages/*"
      ],
      "~/themes/*": [
        "./src/themes/*"
      ],
      "~/utils/*": [
        "./src/utils/*"
      ],
    },
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
